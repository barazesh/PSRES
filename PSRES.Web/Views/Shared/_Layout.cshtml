<!DOCTYPE html>
<html>
<head>
    <title>PSRES MicroGrid: @ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/CSS/site1.css" rel="stylesheet" />
</head>
<body>

    <div class="navbar bg-dark">
        <header class=" container-fluid">
            <div class="navbar-brand text-light">PSRES Lab. MicroGrid</div>
            <ul class="nav navbar-nav">
                <li><a asp-controller="main" asp-action="Index">HomePage</a></li>
                <li><a asp-controller="main" asp-action="Login">Login</a></li>
                <li><a asp-controller="main" asp-action="About">About</a></li>
                <li><a asp-controller="data" asp-action="Meters">Meters</a></li>
                <li><a asp-controller="data" asp-action="Sensors">Sensors</a></li>
            </ul>
        </header>
    </div>
    <section class="container">
        <h1 class="text-center">@ViewBag.Title</h1>
        @RenderBody()
    </section>

    <footer class="container-fluid bg-info text-center">

        <div class="row">

            <div class="footeritem col-3 d-inline-block">
                    <a href="http://um.ac.ir"> <img src="~/img/Shared/Fum.png" class="img-fluid" alt="Ferdowsi University of Mashhad"/></a>
            </div>

            <div class="footeritem col-3 d-inline-block">
                <a href="http://eng.um.ac.ir"><img src="~/img/Shared/english-logo.png" class="img-fluid" alt="Faculty of Engineering"/></a>
            </div>

            <div class="footeritem col-3 d-inline-block">
                <img src="~/img/Shared/Capture.PNG" class="img-fluid" alt="Power System Studies & Restructuring Lab."/>
            </div>

            <div class="footeritem col-3  d-inline-block">
                <a href="http://sircotech.com"><img src="~/img/Shared/sircotech.png" class="img-fluid" alt="Sunflower Industrial Research Company" /></a>
            </div>
        </div>
    </footer>




    <script src="~/lib/jquery/jquery.slim.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/sensorform.js"></script>

</body>
</html>