@model SensorViewModel
@{
    ViewBag.Title = "Sensor Form";
}

<div>
    <form>
        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="selectallfield" asp-for="@Model.SelectAll" />
                <label class="form-check-label">Select All Sensors at Once</label>
            </div>

            <input type="number" min="1" max="20" class="form-control" id="sensorselectorfield" />
        </div>

        <input type="submit" value="Get Data" class="btn btn-primary">
    </form>
</div>
<div id="sensorData">
    <ul>
        <li>Temperature:</li>
        <li> Light:</li>
        <li>Distance:</li>
        <li>Presence:</li>
    </ul>
</div>

<button id="getButton" class="btn"> Get data</button>


@section scripts{
    <script src="~/js/sensorform.js"></script>

}