@model SensorViewModel
@{
    ViewBag.Title = "Sensor Form";
}

<div class="col-1 bg-secondary">
    <form method="post">
        <div class="form-group">
            <label>Zone:</label>
            <input type="number" min="1" max="3" class="form-control" id="sensorselectorfield" asp-for="@Model.Zone" />
        </div>

        <div class="form-group">
            <label>Parent:</label>
            <input type="number" min="1" max="3" class="form-control" id="sensorselectorfield" asp-for="@Model.parentNumber" />
        </div>

        <input type="submit" value="Get Data" class="btn btn-primary">
    </form>
</div>
@if (Model.Sensor.Any())
{
    for (int i = 0; i < 3; i++)
    {
        <div id="sensorData" class="col-3">
            <h3>Sensor Pack @i</h3>
            <ul>
                <li>
                    Temperature: @Model.Sensor[i].GetLatestData().Temperature;
                </li>
                <li>
                    Light: @Model.Sensor[i].GetLatestData().Illumination;
                </li>
                <li>
                    Distance: @Model.Sensor[i].GetLatestData().Distance;
                </li>
                <li>
                    Presence: @Model.Sensor[i].GetLatestData().Presence;
                </li>
            </ul>
        </div>
    }

}



