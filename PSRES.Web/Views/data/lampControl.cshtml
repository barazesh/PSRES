@model LampViewModel

@{
    ViewBag.Title = "Lamp Control";
}


<div class="col-12 bg-light">
    <form method="post" >

        <div class="form-row align-items-center justify-content-center">
            <div class="col-2 mx-1">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="controlalllamps" asp-for="@Model.All" />
                    <label class="form-check-label">All</label>
                </div>
                <input type="number" min="1" max="26" class="form-control" id="lampselector" asp-for="@Model.Index" placeholder="Select Lamp" />
            </div>

            <div class="col-4 mx-1">
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" id="dutycyclecontrolradio" asp-for="@Model.controltype" name="controltype" value="Dim" checked/>
                    <label class="form-check-label">Duty Cycle</label>

                </div>
                <div class="form-group">
                    <input type="number" min="0" max="100" class="form-control" id="dutycyclecontrolnumber" asp-for="@Model.DutyCycle" placeholder="Duty Cycle" />
                </div>
                <div class="form-group">
                    <input type="range" min="0" max="100" class="form-control" id="dutycyclecontrolrange" asp-for="@Model.DutyCycle" />
                </div>
            </div>




            <div class="col-4 mx-1">
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" id="frequencycontrolradio" asp-for="@Model.controltype" name="controltype" value="Frequency" />
                    <label for="Frequency" class="form-check-label">Frequency</label>

                </div>
                <div class="form-group">
                    <input type="number" min="1" max="255" class="form-control" id="frequencycontrolnumber" asp-for="@Model.Frequency" placeholder="Switching Frequency" disabled />
                </div>
                <div class="form-group">
                    <input type="range" min="1" max="255" class="form-control" id="frequencycontrolrange" asp-for="@Model.Frequency" placeholder="Switching Frequency" disabled />
                </div>
            </div>



            <div class="col-1 mx-1">
                <input class="btn btn-primary btn-block" type="submit" id="setbutton" value="Set" />
            </div>
        </div>

    </form>
</div>
